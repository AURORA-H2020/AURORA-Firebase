{
  "firestore": {
    "rules": "security-rules/firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "storage": {
      "port": 9199
    },
    "pubsub": {
      "port": 8085
    },
    "singleProjectMode": true,
    "auth": {
      "port": 9099
    }
  },
  "storage": {
    "rules": "security-rules/firestore.rules"
  }
}
